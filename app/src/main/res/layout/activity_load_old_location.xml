<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_load_old_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zlaqh.mygpsdiary.LoadOldLocationActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/listLayout">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/listview.oldLocationList"
            android:layout_margin="5dp"
            android:clickable="false">


        </ListView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="9"
        android:id="@+id/buttonsLayout">

        <Button
            android:text="Back to Map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button.backToMap"
            android:layout_alignParentBottom="true"
            android:onClick="backToMap"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:layout_margin="5dp" />

        <Button
            android:text="refresh list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button.refresh"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="loadOldLocation"
            android:layout_alignTop="@+id/button.backToMap"
            android:layout_weight="1"
            android:layout_margin="5dp" />
    </LinearLayout>
</LinearLayout>
